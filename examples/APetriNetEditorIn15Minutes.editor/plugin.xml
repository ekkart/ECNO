<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="PetriNets.presentation.PetriNetsModelWizardID"
            name="%_UI_PetriNetsModelWizard_label"
            class="PetriNets.presentation.PetriNetsModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/PetriNetsModelFile.gif">
         <description>%_UI_PetriNetsModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="PetriNets.presentation.PetriNetsEditorID"
            name="%_UI_PetriNetsEditor_label"
            icon="icons/full/obj16/PetriNetsModelFile.gif"
            extensions="petrinets"
            class="PetriNets.presentation.PetriNetsEditor"
            contributorClass="PetriNets.presentation.PetriNetsActionBarContributor">
      </editor>
   </extension>

</plugin>
